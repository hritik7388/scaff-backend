generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum CompanyStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  BLOCKED    
  DELETED    
}

enum UserStatus {
  ACTIVE
  INACTIVE
  BLOCKED
  DELETED
}

enum CompmnayApproval {
  APPROVED
  REJECTED
  PENDING
}

enum Role { 
  COMPANY
  SUPER_ADMIN
  SUB_ADMIN
  PROJECT_MANAGER
  COMPETENT_PERSON
  TRADESMAN
}

model Company {
  id           BigInt           @id @default(autoincrement())
  uuid         String           @unique
  name         String
  email        String           @unique
  address      String?
  latitude     Float?
  longitude    Float?
  image        String?
  password     String
  mobileNumber String
  countryCode  String           @default("+91") // ✅ Added this
  user_type    Role
  lastLogin    DateTime?
  status       CompanyStatus    @default(ACTIVE)
  isDeleted    Boolean          @default(false)
  isApproved   CompmnayApproval @default(PENDING)
  createdAt    DateTime         @default(now())

  users        User[]           // One-to-many relationship
}

model User {
  id               BigInt      @id @default(autoincrement())
  uuid             String      @unique
  name             String
  email            String      @unique
  password         String
  mobileNumber     String
  countryCode      String      @default("+91") // ✅ Added this
  dob              DateTime?
  jobId            String?
  idProofImage     String?
  photoImage       String?
  address          String?
  user_type        Role
  status           UserStatus  @default(ACTIVE)
  isDeleted        Boolean     @default(false)
  companyId        BigInt?
  company          Company?    @relation(fields: [companyId], references: [id])
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  lastLogin        DateTime?

  devices          Device[]
}

model Device {
  id            BigInt    @id @default(autoincrement())
  userId        BigInt
  user_type     String?
  deviceToken   String?
  deviceType    String?
  deviceName    String? 
  appVersion    String?
  osVersion     String?
  lastLogin     DateTime?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
}
